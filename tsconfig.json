{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist", // match outDir
    "emitDeclarationOnly": true,
    "declarationMap": true
  },
  "include": ["src/**/*", "src"],
  "exclude": ["node_modules", "dist", "test"]
}
